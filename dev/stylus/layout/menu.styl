.menu
  @media $desktopMin
    pos fixed
    z-index 11
    l 0
    visibility hidden
    t 100%
    opacity 0
    padding 34px 32px
    w 100%
    h 100%
    transition .7s visibility, .7s top, .7s opacity
    overflow-y auto
  @media $PortraitMin
    padding 40px 15px
  &__list
    df()
    @media $desktopMin
      flex-direction column
      pr 0
      w 100%
  &__item
    pos relative
    font-size 0
    @media $LandscapeMin
      w 100%
    &_tablet
      df(flex-start, space-between)
      w 100%
      @media $desktopTabletFrom
        dn()
    &_mobile
      @media $PortraitMediumFrom
        dn()
      @media $PortraitMin
        .header__order
          db()
          ml 0
    & + &
      ml 31px
      @media $desktopMedium
        ml 15px
      @media $desktopMin
        ml 0
        mt 20px
  &__href
    pos relative
    z-index 1
    color white
    fontify 16px 500 19px
    @media $lDesktopSmall
      fontify 14px 400 19px
    @media $desktopMin
      fontify 24px 600 32px
    &:before
      content ""
      pos absolute
      z-index -1
      l -3px
      r -3px
      b 0
      h 0px
      bgc $red
      transition .7s height
    &:hover:before,
    &.active:before
      h 100%
  &__sublist
    visibility hidden
    opacity 0
    pos absolute
    t 30px
    l -24px
    transition .3s visibility, .3s opacity, .3s top
    @media $desktopMin
      visibility visible
      opacity 1
      pos relative
      t 0
      l 0
      padding 0
      bgc transparent
      mt 14px
    &:before
      content ""
      pos absolute
      l 0
      t -21px
      h 21px
      w 100%
      @media $desktopMin
        dn()
    @media $desktopMinFrom
      ^[0]__item:hover &
        t 40px
        opacity 1
        visibility visible
    &-item
      @media $desktopMinFrom
        &_spacer
          h 14px
          bgc $red
      & + &
        mt 0
        @media $desktopMin
          mt 7px
    &-href
      db()
      pos relative
      color white
      fontify 14px 400 18px
      padding 8px 24px 9px
      bgc $red
      transition .7s background
      @media $desktopMin
        fontify 18px 400 24px
        padding 0
        bgc $blue
        transition .7s color
      &:hover,
      &_active
        bgc $blue
        @media $desktopMin
          c $red
  &__search
    size(14px, 14px)
    background url('data:image/png;base64,') no-repeat center
    will-change filter
    mt 3px
    filter brightness(0) invert(1)
    transition .7s filter
    @media $desktopMinFrom
      span
        dn()
    @media $desktopMin
      fontify 24px 600 32px
      width auto
      height auto
      pl 25px
      background-position left center
      transition .7s opacity
    &:hover
      @media $desktopMinFrom
        filter none
      @media $desktopMin
        opacity .75

.burger
  @media $desktopMinFrom
    dn()
  ml 30px
  @media $PortraitMedium
    ml 15px
  &__shadow
    pos fixed
    l 0
    t 0
    transform translateY(100%)
    transition 1s transform, .7s opacity
    will-change transform
    opacity .2
    bgc alpha($blue, 1)
    size 100%
    z-index 10
  &__button
    cursor pointer
    w 26px
    h 26px
    pos relative
    z-index 11
    &:before
      content ""
      pos absolute
      t 0
      r 0
      w 25px
      h 1px
      bgc white
      transition .5s width, .5s background, .5s transform, .5s top
    &:after
      content ""
      pos absolute
      b 0
      r 0
      w 25px
      h 1px
      bgc white
      transition .5s width, .5s background, .5s transform, .5s top  
    &-meat
      content ""
      pos absolute
      t 50%
      r 0
      w 25px
      h 1px
      bgc white
      transition .5s width, .5s background, .5s transform, .5s top  
    &.open
      &:before
        animation burger-top 1s ease-in-out forwards
      &:after
        animation burger-bottom 1s ease-in-out forwards
      & ^[-1]-meat
        opacity 0
      & + ^[0]__shadow
        opacity 1
        transform translateY(0)
    &.open.remove
      &:before
        animation burger-top-invert 1s ease-in-out forwards
      &:after
        animation burger-bottom-invert 1s ease-in-out forwards
      & ^[-1]-meat
        opacity 1
        transition .4s opacity .6s

html:not(.touchevents)
  .burger
    &:not(.open):hover
      &:before
        animation burger-hover 1s infinite ease-in-out alternate
      &:after
        animation burger-hover 1s infinite ease-in-out alternate forwards 400ms
    &:not(.open):hover &-meat
      animation burger-hover 1s infinite ease-in-out alternate forwards 200ms

@keyframes burger-hover
  0%
    w 100%
  50%
    w 50%
  100%
    w 100%
      
@keyframes burger-top
  0%
    t 0
  40%
    t 12px
  60%
    t 12px
    transform rotate(0)
  100%
    t 12px
    transform rotate(45deg)
    
@keyframes burger-bottom
  0%
    b 0
  40%
    b 12px
  60%
    b 12px
    transform rotate(0)
  100%
    b 12px
    transform rotate(-45deg)

@keyframes burger-top-invert
  0%
    t 12px
    transform rotate(45deg)
  40%
    t 12px
    transform rotate(0)
  60%
    t 12px
  100%
    t 0
    
@keyframes burger-bottom-invert
  0%
    b 12px
    transform rotate(-45deg)
  40%
    b 12px
    transform rotate(0)
  60%
    b 12px
  100%
    b 0

body.burgeropen
  overflow hidden
  position fixed
  w 100%
  .menu
    visibility visible
    opacity 1
    t 0
    transition-delay .7s