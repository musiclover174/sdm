.logo
  &__wrapper
    pos fixed
    t 25%
    mt -46px
    oh()
    size 207px 93px
    z-index 5
    @media $lDesktopSmall
      t 30%
      &[style]
        size 77px 93px
    @media $LandscapeMax
      dn()
    &.dark ^[0]__img_dark
      opacity 1
  &__img
    w 207px
    &_dark
      pos absolute
      l 0
      t 0
      opacity 0
      transition .7s opacity

.header
  pos fixed
  t 0
  l 78px
  r 0
  z-index 5
  padding 18px 0
  transition .7s top
  @media $lDesktopSmall
    l 63px
  @media $LandscapeMax
    l 0
    .h-wrapper
      align-items center
      justify-content space-between
  @media $LandscapeMaxFrom
    &:not(.fixed)
      t 15px
  @media $desktopTablet
    .h-wrapper
      & > ^[0]__curr,
      & > ^[0]__lang
        dn()
  &:before
    content ""
    pos absolute
    l 0
    r 0
    b 0
    h 0
    bgc $gblue
    transition .7s height
    @media $LandscapeMax
      h 100%
  &.fixed:before
    h 100%
  @media $LandscapeMaxFrom
    &__logo
      dn()
  &__logo
    pos relative
    &-img
      @media $LandscapeMax
        max-height 74px
      @media $Mobile370
        max-height 50px
  &__lang
    dfv()
    pos relative
    @media $LandscapeMax
      flex-direction row
    &-href
      pos relative
      z-index 1
      c white
      fontify 16px 500 19px
      @media $lDesktopSmall
        fontify 14px 500 19px
      @media $LandscapeMax
        fontify 24px 600 32px
      & + &
        mt 5px
        @media $LandscapeMax
          mt 0
          ml 15px
      &:before
        content ""
        pos absolute
        z-index -1
        l 0
        r 0
        b 0
        h 1px
        bgc alpha(white, .25)
        transition .7s height, .3s .7s left, .3s .7s right, .3s .7s background-color
      &:hover:before,
      &.active:before
        h 100%
        bgc $red
        l -3px
        r -3px
        transition .7s .3s height, .3s left, .3s right, .3s background-color
  &__curr
    dfv()
    pos relative
    &-elem
      c white
      fontify 16px 500 19px
      white-space nowrap
      @media $lDesktopSmall
        fontify 14px 500 19px
      & + &
        mt 5px
  &__main
    df(center, space-between)
    pl 70px
    @media $desktopMin
      justify-content flex-end
      align-self center
      & > ^[0]__btn
        dn()
    @media $LandscapeMax
      justify-content space-between
    @media $PortraitMedium
      pl 0
  &__phone
    pos relative
    c white
    fontify 16px 500 18px
    @media $lDesktopSmall
      fontify 14px 500 18px
      mt -1px
    @media $LandscapeMax
      fontify 24px 500 19px
    @media $PortraitMax
      fontify 20px 500 19px
    @media $PortraitMedium
      fontify 15px 500 19px
    @media $Mobile370
      fontify 14px 400 19px
    &:before
      content ""
      pos absolute
      t 1px
      l -23px
      size(14px, 15px)
      background url('data:image/png;base64,') no-repeat center
      @media $LandscapeMax
        dn()

body:not(.index) .header
  t 0
  @media $LandscapeMaxFrom
    padding 33px 0 32px
  @media (min-width:1001px) and (max-width:1070px)
    padding 40px 0
  &:before
    h 100%
  &__logo
    @media $LandscapeMaxFrom
      db()
      pos absolute
      l -48px
      t 13px
      &-img
        w 161px
  &__curr-elem
    @media $lDesktopSmall
      dn()