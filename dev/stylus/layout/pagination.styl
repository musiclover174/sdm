.pagination
  df()
  mt 40px
  c $dark
  &_white
    c white
  @media $lDesktopSmall
    mt 50px
  @media $LandscapeMax
    mt 70px
  &:last-child
    mb 139px
    @media $PortraitMax
      mb 100px
  &__prev,
  &__next
    ib()
    pos relative
    size 43px
    outline none
    transition .7s opacity
    @media $lDesktopSmall
      size 41px
    @media $PortraitMax
      size 35px
    &:before
      content ""
      pos absolute
      l 0
      t 50%
      size 9px 15px
      background url('data:image/png;base64,') no-repeat center
      transition .7s background
      mt -7px
      ^[0]_white &
        background-image url('data:image/png;base64,')
    &:not(.disabled):hover
      &:before
        background-image url('data:image/png;base64,')
    &.disabled
      opacity .4
  &__prev
    mr 7px
  &__next
    transform scaleX(-1)
    ml 7px
  &__list
    display flex
  &__item
    text-align center
    color inherit
    size 43px
    display flex
    align-items center
    justify-content center
    fontify 18px 600 43px
    transition .7s background-color
    @media $lDesktopSmall
      size 41px
      fontify 14px 500 41px
    @media $PortraitMax
      size 35px
      line-height 35px
    &.active
      bgc $red
    & + &
      ml 13px
      @media $lDesktopSmall
        ml 5px
    &-href
      pos relative
      color inherit
      fontify 16px 500 16px
      border-bottom 1px solid alpha($dark, .25)
      transition .7s color, .7s border
      @media $lDesktopSmall
        fontify 14px 500 14px
      &:not(a):after
        border-color transparent
      &:hover
        color $red
        border-color transparent
      ^[-1].active &
        color white
        border-color transparent
