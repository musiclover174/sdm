.hidden-block
  height 0

.popup
  display inline-block
  vertical-align middle
  pos absolute
  t -1000%
  z-index 1
  width 94%
  max-width 474px
  padding 42px 40px 56px
  bgc white
  opacity 0
  text-align left
  visibility hidden
  transform scale(.9)
  will-change transform
  transition .7s .7s transform, .7s .7s opacity
  @media $lDesktopSmall
    max-width 414px
  @media $PortraitMedium
    padding 30px 20px
  &_search
    bgc transparent
    padding 0
    max-width 634px
    w calc(100% - 120px)
    @media $PortraitMedium
      w calc(100% - 80px)
    ml -40px
    & ^[0]__form
      mt 0
    & ^[0]__close
      t 9px
      @media $PortraitMedium
        r -40px
  &.show
    t 0
    pos relative
    opacity 1
    visibility visible
    transform scale(1)
  &__over
    // dfv(center, center)
    padding 30px 0
    t 0
    l 0
    r 0
    b 0
    pos fixed
    overflow hidden
    text-align center
    z-index -1
    @media $PortraitMedium
      padding 60px 0 30px
    &:before
      content ""
      display inline-block
      font-size 0
      height 100%
      vertical-align middle
      width 0
  &__bg
    pos fixed
    z-index 0
    l 0
    t 0
    b 0
    w 0
    bgc $gblue
    opacity 0
  &-show
    oh()
    & ^[0]__bg
      w 100%
      opacity 1
      transition .7s opacity, .7s width
      @media $desktopMin
        opacity 1
    & ^[0]__over
      overflow-y scroll
      z-index 1000
  &__title
    pos relative
    z-index 1
    c $dark
    fontify 44px 700 48px
    mb 20px
    @media $lDesktopSmall
      fontify 36px 700 40px
    @media $PortraitMax
      fontify 30px 700 34px
  &__subtitle
    c $dark
    fontify 16px 400 26px
    @media $lDesktopSmall
      fontify 15px 400 25px
  &__hint
    c $dark
    fontify 16px 400 24px
    @media $lDesktopSmall
      fontify 14px 400 21px
  &__close
    pos absolute
    z-index 2
    t -40px
    r -40px
    size 23px 23px
    background url('data:image/png;base64,') no-repeat center
    transition .7s background-image
    @media $PortraitMedium
      r 0
      t -40px
    &:hover
      background-image url('data:image/png;base64,')
    &-btn
      mt 23px
  &__form
    mt 19px
    &_search
      pos relative
    &-sbm
      pos absolute
      z-index 1
      t 0
      r 0
      size 40px
      background url('data:image/png;base64,') no-repeat center $red
      transition .7s background-color

  &__search
    &-input
      w 100%
      background transparent
      border 0
      border-bottom 2px solid white
      h 45px
      font-size 16px
      c white
      padding 0 60px 0 23px
      @media $PortraitMedium
        padding 0
        pr 35px
    &-sbm
      pos absolute
      t 11px
      r 25px
      size 21px 21px
      background url('data:image/png;base64,') no-repeat center
      @media $PortraitMedium
        r 0

.no-touchevents .popup-show
  mr 17px