.fakecheckbox
  ib()
  pos relative
  &__label
    ib()
    c $dark
    fontify 16px 400 26px
    pos relative
    pl 37px
    @media $lDesktopSmall
      fontify 15px 400 25px
    &:before 
      content ""
      pos absolute
      l 0px
      t 1px
      size 22px
      border 1px solid #eaebf3
      cursor pointer
      transition .5s border
    &:after
      content ""
      pos absolute
      size 11px 9px
      background url('data:image/png;base64,') no-repeat center
      l 7px
      t 9px
      opacity 0
      cursor pointer
      transition .5s opacity
    a
      color inherit
      border-bottom 1px solid $blue
      transition .7s border
      &:hover
        border-color transparent
  &__truecheck
    pos absolute
    l 0
    t 0
    w 0
    h 0
    border 0
    opacity 0
    &:checked + ^[0]__label:after
      opacity 1
    &.warning + ^[0]__label:before 
      border-color $red