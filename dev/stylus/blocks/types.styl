.types
  padding 100px 0
  &__about
    mt -11px
    &-title
      c $dark
      fontify 60px 700 64px
      mb 33px
      ml -4px
      span
        c $red
    &-text
      pr 20px
  &__list
    df(stretch, flex-start)
    flex-wrap wrap
  &__item
    w 50%
    pos relative
    border-right 1px solid #eaebf3
    border-bottom 1px solid #eaebf3
    padding 22px 48px
    min-height 234px
    bgc $blue
    oh()
    &:nth-child(1),
    &:nth-child(2)
      border-top 1px solid #eaebf3
    &:nth-child(2n-1)
      border-left 1px solid #eaebf3
    &:before
      content ""
      pos absolute
      z-index 1
      l 0
      t -188%
      pt 112%
      w 167%
      bgc white
      transform rotate(38deg)
      transform-origin 0 0
      transition 2s width
    &-bg
      pos absolute
      t 0
      l 0
      size 100%
      background-size cover
      background-repeat no-repeat
      background-position center
      z-index 0
      opacity .35
    &-namelist
      dfv()
      pos relative
      z-index 2
      max-width 275px
    &-name
      & + &
        mt 15px
    &-href
      c $dark
      fontify 20px 500 30px
      bb_invert()
      transition 1s color, .7s border-color
    &-icon
      pos absolute
      r 41px
      b 41px
      z-index 2
      transition .5s filter
    &:hover
      &:before
        w 0%
      & ^[-1]-href
        c white
        border-color alpha(white, .25)
        &:hover
          border-color transparent
      & ^[-1]-icon
        filter brightness(0) invert(1)